<div class="topper left-section">
	<%= image_tag('Logo_Small') %>
	<%= link_to 'API-Addicts', apis_path, style: 'color: #0076b3;' %>
</div>
<div class="right-section">
	<% if user_signed_in? %>
		<div class="right-section-button" style="background-color: #5799b1;">
			<%= link_to 'Log Out', destroy_user_session_path, method: 'delete' %>
		</div>
	<% else %>
		<div class="right-section-button" style="background-color: #757575;">
			<%= link_to 'Sign Up', new_user_registration_path %>
		</div>
		<div class="right-section-button" style="background-color: #5799b1;">
			<%= link_to 'Log In', new_user_session_path %>
		</div>
	<% end %>
</div>
