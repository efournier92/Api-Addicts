$(document).ready(init);
$('#topic').upvote();

function init(){
  document.getElementById("up_vote").addEventListener("click", upVote);
  document.getElementById("down_vote").addEventListener("click", downVote);
};

function upVote() {
  var get_path = document.getElementById("up_vote");
  var path = get_path.getAttribute("data-path");
  var request = $.ajax({
    method: "post",
    url: path 
  });
}

function downVote() {
  var get_path = document.getElementById("down_vote");
  var path = get_path.getAttribute("data-path");
  var request = $.ajax({
    method: "post",
    url: path 
  });
}
